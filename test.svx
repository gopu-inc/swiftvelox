// test_simple.svx
// Test simple pour vérifier les fonctionnalités de base

print("=== Test simple SwiftVelox ===");

// Test 1: Variables et print
let a = 10;
let b = 5;
print("a =", a, "b =", b);
print("a + b =", a + b);

// Test 2: Chaînes
let nom = "Monde";
print("Bonjour " + nom);

// Test 3: Booléens
print("true:", true);
print("false:", false);
print("5 == 5:", 5 == 5);
print("5 == 6:", 5 == 6);

// Test 4: If/else
if (a > b) {
    print("a est plus grand que b");
} else {
    print("a n'est pas plus grand que b");
}

// Test 5: While
let i = 1;
print("Compte de 1 à 3:");
while (i <= 3) {
    print("i =", i);
    i = i + 1;
}

// Test 6: Fonction simple
fn saluer() {
    print("Bonjour depuis une fonction!");
}
saluer();

// Test 7: Fonction avec paramètres
fn multiplier(x, y) {
    return x * y;
}
print("multiplier(3, 4) =", multiplier(3, 4));

// Test 8: Fonction native
print("Temps actuel:", time());

print("=== Fin des tests ===");
